    <noscript>
      <img height="1" width="1"
           src="https://www.facebook.com/tr?id=377816760135726&ev=PageView
&noscript=1"/>
    </noscript>
    <!-- End Facebook Pixel Code -->
</head>

<body class="{{ classes }}">
<!-- Google Tag Manager (noscript) -->
<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-NJR949F"
                  height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
<!-- End Google Tag Manager (noscript) -->

{{ v.header|raw }}

<main>{{ page }}</main>

{{ v.footer|raw }}

{{ v.compactMenu|raw }}

<div class="processing-overlay">
  <div class="spin"></div>
</div>

<js-bottom-placeholder token="{{ placeholder_token }}">
  <script src="https://www.google.com/recaptcha/api.js?onload=onloadCallback&render=explicit&hl={{ v.lang }}"
          async defer>
  </script>
</body>
</html>
